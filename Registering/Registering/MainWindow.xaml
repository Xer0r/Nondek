<Window x:Class="Registering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System;assembly=mscorlib" xmlns:local1="clr-namespace:Registering"
        mc:Ignorable="d"
        Title="User Profile" Height="410" Width="500">
    <Grid>
        <Border Background="White" Width="360" Height="300"/>

        <Ellipse HorizontalAlignment="Left" Name="ProfileImage"  Width="200" Height="150" VerticalAlignment="Top" Margin="29,29,0,0">
            <Ellipse.Fill>
                <ImageBrush/>
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock Name="UsernameText" HorizontalAlignment="Left" FontSize="25" Margin="250,178,0,0" Height="39" VerticalAlignment="Top"/>
        <TextBlock Name="FavoriteQuoteText" FontSize="15" TextWrapping="WrapWithOverflow" HorizontalAlignment="Left" Width="408" Margin="46,243,0,0" Height="230" VerticalAlignment="Top" TextAlignment="Justify"/>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Click="Logout_Click">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/logout_icon.png" Width="21" Height="20"/>
                    <TextBlock Text="Logout" Margin="5,0,0,0" Height="24" Width="42"/>
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</Window>
