<Window x:Class="Registering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System;assembly=mscorlib" xmlns:local1="clr-namespace:Registering"
        mc:Ignorable="d"
        Title="User Profile" Height="350" Width="400">
    <Grid>
        <Image Name="ProfileImage" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" Width="100"/>
        <TextBlock Name="UsernameText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        <TextBlock Name="FavoriteQuoteText" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="12"/>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Click="Logout_Click">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="logout_icon.png" Width="16" Height="16"/>
                    <TextBlock Text="Logout" Margin="5,0,0,0"/>
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</Window>
